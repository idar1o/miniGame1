<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dp" /> <!-- Установи радиус закругления (в данном случае, 8dp) -->
            <solid android:color="@color/teal_200" /> <!-- Цвет фона при нажатии -->
            <stroke
                android:width="4dp"
                android:color="#476EF8" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="10dp" /> <!-- Установи радиус закругления (в данном случае, 8dp) -->
            <solid android:color="@color/yellow" /> <!-- Цвет фона при неактивном состоянии -->
            <stroke
                android:width="4dp"
                android:color="#476EF8" />
        </shape>
    </item>

</selector>