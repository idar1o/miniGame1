<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nikita_kozlov_123"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageSquirrel"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:layout_weight="2"
                android:background="@drawable/corner"
                app:srcCompat="@drawable/pngfind_com_squirrel_png_1812644" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score_squirrel"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Max score: 0"
                    android:fontFamily="casual"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="5dp"
                    android:layout_height="0dp">
                <Button
                    android:id="@+id/choose_squirrel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/buttonbackground"
                    android:text="Play"
                    android:fontFamily="casual"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/backgoroundfruits"
                        app:srcCompat="@drawable/pngegg__2_" />
                    </LinearLayout>
                <Button
                    android:id="@+id/leaderboard_squirrel"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/leaderboardbutton"
                    android:text="Leader Board"
                    android:fontFamily="casual"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageFawn"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:padding="15dp"
                android:background="@drawable/corner"
                app:srcCompat="@drawable/pngfind_com_fawn_png_6306030" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score_fawn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Max score: 0"
                    android:fontFamily="casual"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="5dp"
                    android:layout_height="0dp">
                <Button
                    android:id="@+id/choose_Fawn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/buttonbackground"
                    android:text="play"
                    android:fontFamily="casual"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/backgoroundfruits"
                    app:srcCompat="@drawable/pngegg" />
            </LinearLayout>
                <Button
                    android:id="@+id/leaderboard_Fawn"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/leaderboardbutton"
                    android:text="Leader Board"
                    android:fontFamily="casual"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageeagle"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:layout_weight="2"
                android:background="@drawable/corner"
                app:srcCompat="@drawable/pngfind_com_eagle_clipart_png_1336018" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score_eagle"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Max score: 0"
                    android:fontFamily="casual"
                    android:textColor="@color/black"
                    android:textSize="30sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="5dp"
                    android:layout_height="0dp">
                <Button
                    android:id="@+id/choose_eagle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/buttonbackground"
                    android:text="play"
                    android:fontFamily="casual"
                    android:textColor="@color/black"
                    android:textSize="24sp"  />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/backgoroundfruits"
                        app:srcCompat="@drawable/pngtreeblueberry_simple_fruit_png_4528212" />
                </LinearLayout>
                <Button
                    android:id="@+id/leaderboard_Eagle"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/leaderboardbutton"
                    android:text="Leader Board"
                    android:fontFamily="casual"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>